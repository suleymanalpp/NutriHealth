<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            display: flex;
            height: 100vh;
            background-color: #f4f9f4;
        }

        /* Sidebar Styling (Left navigation bar) */
        .sidebar {
            width: 250px;
            background-color: #8BC34A; /* Green Color */
            padding-top: 30px;
            position: fixed;
            height: 100%;
            top: 0;
            left: 0;
        }

            .sidebar a {
                display: block;
                padding: 15px;
                text-align: center;
                text-decoration: none;
                color: black;
                font-size: 18px;
                margin: 10px 0;
                background-color: #A5D6A7; /* Lighter Green */
                border-radius: 5px;
            }

                .sidebar a:hover {
                    background-color: #7B9F2A; /* Darker Green */
                    color: white;
                }

        /* Main Content Area */
        .main-content {
            margin-left: 250px; /* to offset sidebar */
            padding: 20px;
            width: 100%;
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
        }

        h2 {
            font-size: 36px; /* Bigger font size for title */
            color: #4CAF50; /* Green color for title */
            margin-bottom: 20px;
            text-align: center;
        }

        /* Style for the button */
        button {
            background-color: #4CAF50; /* Green background for button */
            color: white;
            font-size: 18px;
            padding: 15px 30px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            transition: background-color 0.3s ease;
        }

            button:hover {
                background-color: #45a049; /* Darker green on hover */
            }
    </style>
</head>
<body>

    <!-- Sidebar -->
    <div class="sidebar">
        <a href="/Welcome">Welcome</a> <!-- Added a link for Welcome -->
        <a href="/PersonalInfo">Personal Information</a>
        <a href="/MacrosCalories">Macros and Calories</a>
        <a href="/MealPlan">Meal Plan</a>
        <a href="/MyProgress">My Progress</a>
        <!-- Add more links as needed -->
    </div>

    <!-- Main content -->
    <div class="main-content">
        @RenderBody() <!-- This renders the content of each page -->
    </div>

</body>
</html>
